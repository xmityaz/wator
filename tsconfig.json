{
  "compilerOptions": {
    "outDir": "./dist/server",
    "sourceMap": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  }
}
